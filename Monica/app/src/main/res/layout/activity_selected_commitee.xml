<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    tools:context=".SelectedCommitee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/imageCommittee"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="logoSelected"
            app:srcCompat="@drawable/cbs2017"
            android:background="@drawable/edit_round"
            android:padding="7dp"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:weightSum="4">
            <TextView
                android:id="@+id/committee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:fontFamily="@font/josefinsans_bold"
                android:paddingBottom="5dp"
                android:textSize="35sp"
                android:text="CBS 2018"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/detailCommittee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:fontFamily="@font/josefinsans_bold"
                android:paddingBottom="5dp"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="Ospek jurusan di TI Unpad 2018"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iconOrang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/jumlahPanitia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/josefinsans_bold"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="25dp"
                    android:textSize="20sp"
                    android:text="60"/>
                <TextView
                    android:id="@+id/selesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/josefinsans_bold"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_pink"
                    android:padding="6dp"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="WE FINISH IT!" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:fontFamily="@font/josefinsans_bold"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:text="Connect with others"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/message"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="logoSelected"
                app:srcCompat="@drawable/cbs2017"
                android:background="@drawable/edit_round"
                android:padding="7dp"
                android:scaleType="centerInside"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/message"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="logoSelected"
                app:srcCompat="@drawable/cbs2017"
                android:background="@drawable/edit_round"
                android:padding="7dp"
                android:scaleType="centerInside"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/message"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="logoSelected"
                app:srcCompat="@drawable/cbs2017"
                android:background="@drawable/edit_round"
                android:padding="7dp"
                android:scaleType="centerInside"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>