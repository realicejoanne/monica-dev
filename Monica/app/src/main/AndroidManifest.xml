<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="unpad.rockbottom.monica">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Auth" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".CreateCommittee"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".CommitteeView" />
        <activity
            android:name=".Chat"
            android:parentActivityName=".CommitteeView" />
        <activity
            android:name=".Call"
            android:parentActivityName=".CommitteeView" />
        <activity
            android:name=".Channel"
            android:parentActivityName=".CommitteeView" />
        <activity
            android:name=".ToDoList"
            android:parentActivityName=".CommitteeView" />
        <activity
            android:name=".ItemList"
            android:parentActivityName=".CommitteeView" />
        <activity
            android:name=".FileCloud"
            android:parentActivityName=".CommitteeView" />
        <activity
            android:name=".ChatRoom"
            android:parentActivityName=".Chat" />
        <activity
            android:name=".ChannelRoom"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".Channel" />
        <activity
            android:name=".CallRoom"
            android:parentActivityName=".Call" />
        <activity android:name=".CallVideoRoom"/>
    </application>

</manifest>